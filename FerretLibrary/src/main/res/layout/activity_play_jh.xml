<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    tools:viewBindingIgnore="true"
    tools:context="com.joyhonest.ferrent_new_android.PlayActivity">
    <com.joyhonest.ferrent_new_android.MyImageView
        android:id="@+id/DisplayImageView"
        android:scaleType="fitXY"
        android:rotation="0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <ImageView
        android:id="@+id/LowBatteryAert"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintDimensionRatio="w,156:63"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:srcCompat="@mipmap/low_battery_img_en_jh" />

    <View
        android:id="@+id/CurrentAertView"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/flash_aert"
        />

    <LinearLayout
        android:id="@+id/top_tool_bar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/help_jh"
                android:clickable="false"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/settings_jh"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/camera_jh"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/video_sound_jh"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/file_jh"/>
            <Space

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button

                android:id="@+id/button6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/burner_lighting_jh"
                />

            <Space
                android:id="@+id/space_6a"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button6_a"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/af_jh"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button_hidde"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/hiddenicon_up_jh"/>

            <Space
                android:id="@+id/right1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Space
                android:layout_width="60dp"
                android:layout_height="60dp"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Space
                android:layout_width="60dp"
                android:layout_height="60dp"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <com.joyhonest.ferrent_new_android.StrokeTextView
                android:id="@+id/RecTime_Text"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="00:00"
                android:textColor="#9ff0"
                android:textStyle="normal"
                android:gravity="center"

                app:stroke_color="#FFFF0000"
                app:stroke_width="1dp"

                android:visibility="invisible"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <com.joyhonest.ferrent_new_android.StrokeTextView
                android:id="@+id/RecTime_Text_sound"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="00:00"
                android:textSize="16dp"
                android:textColor="#9ff0"
                android:textStyle="bold"
                app:stroke_color="@android:color/black"
                app:stroke_width="1dp"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Space
                android:layout_width="60dp"
                android:layout_height="60dp"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Space
                android:layout_width="60dp"
                android:layout_height="60dp"
                />


            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Space
                android:layout_width="60dp"
                android:layout_height="60dp"
                />

            <Space
                android:id="@+id/Space_A1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Space
                android:id="@+id/Space_A"
                android:layout_width="60dp"
                android:layout_height="60dp"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>


    <com.joyhonest.ferrent_new_android.MySilder
        android:id="@+id/mySilder"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_marginTop="70dp"


        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintHorizontal_bias="0.6828"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.joyhonest.ferrent_new_android.MySilder>


    <com.joyhonest.ferrent_new_android.MySilder
        android:id="@+id/mySilder_vmc"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_marginTop="70dp"


        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintHorizontal_bias="0.805"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.joyhonest.ferrent_new_android.MySilder>


    <com.joyhonest.ferrent_new_android.MySilder

        android:id="@+id/mySilder_vmc_1"

        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"

        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintLeft_toRightOf="@+id/side_but"
        app:layout_constraintBottom_toBottomOf="@+id/side_but"

        >

    </com.joyhonest.ferrent_new_android.MySilder>


    <LinearLayout

        android:id="@+id/side_but"
        android:layout_width="60dp"
        android:layout_height="0dp"

        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"


        android:orientation="vertical"


        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >



        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button3_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/camera_jh" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/button4_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/video_sound_jh" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button6_a_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/af_jh" />
        <Space
            android:id="@+id/bbb1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>


    <!--app:layout_constraintHorizontal_bias="0.805" -->





    <!--        app:layout_constraintHeight_percent="0.25"-->
    <!--        app:layout_constraintDimensionRatio="w,156:63"-->


    <com.joyhonest.ferrent_new_android.StrokeTextView
        android:id="@+id/SD_INFO"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="SD 0.0% USED"
        android:textColor="#FFFFFFFF"
        android:layout_marginEnd="10dp"

        android:textSize="20sp"

        app:layout_constraintRight_toLeftOf="@+id/button7"
        app:layout_constraintBottom_toBottomOf="@+id/button7"
        app:layout_constraintTop_toTopOf="@+id/button7"
        app:stroke_color="@android:color/black"
        app:stroke_width="1dp" />


    <Button
        android:id="@+id/button7"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginEnd="10dp"

        android:background="@mipmap/battery_4_a_jh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



    <!--com.joyhonest.ferrent_new_android.StrokeTextView
        android:id="@+id/VCM_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginRight="20dp"
        android:textColor="#FFFFFFFF"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:textSize="20sp"
        app:stroke_color="@android:color/black"
        app:stroke_width="1dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/SD_INFO"
        /-->



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/NoDevice_AlertView"
        android:layout_width="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/ferret_white_background_jh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.55"
            app:layout_constraintWidth_percent="0.55"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.66" >

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#0000"
                android:text="@string/CANCEL"
                android:textColor="#0090ff"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintWidth_percent="0.49"

                />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#0000"
                android:text="@string/OK"
                android:textColor="#0090ff"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.25"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="0.49" />





            <TextView
                android:id="@+id/sLine1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/No_Device_1"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1" />

            <TextView
                android:id="@+id/sLine2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/No_Device_2"
                android:textColor="#000"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35" />


            <TextView
                android:id="@+id/sLine3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/No_Device_3"
                android:textColor="#000"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.55" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@mipmap/ferret_line_jh"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintLeft_toLeftOf="parent"

                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
